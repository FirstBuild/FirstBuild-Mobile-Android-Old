<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_layout_add_product_guide"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:layout_marginTop="0dp">

        <com.firstbuild.viewUtil.StyledTextView
            android:id="@+id/textMyProducts"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="@string/select_product_below"
            android:textSize="19sp"
            ge:typeface="fonts/PTSansNarrowRegular"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <ImageView
            android:background="@color/colorParagonDivider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_add_product_chillhub"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        android:background="@android:color/white"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/add_product_chillhub_plus_icon"
            style="@style/add_product_plus_icon"
            android:src="@drawable/img_plus"/>

        <com.firstbuild.viewUtil.StyledTextView
            style="@style/add_product_item_text"
            android:text="ChillHub"
            android:layout_toRightOf="@+id/add_product_chillhub_plus_icon"/>

        <ImageView
            android:background="@color/colorParagonDivider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_add_product_paragon"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/add_product_Paragon_plus_icon"
            style="@style/add_product_plus_icon"
            android:src="@drawable/img_plus"/>

        <com.firstbuild.viewUtil.StyledTextView
            style="@style/add_product_item_text"
            android:text="Paragon"
            android:layout_toRightOf="@+id/add_product_Paragon_plus_icon"/>

        <ImageView
            android:background="@color/colorParagonDivider"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
