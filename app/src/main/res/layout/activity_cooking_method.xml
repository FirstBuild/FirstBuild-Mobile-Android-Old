<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg_cooking_method_0"
    tools:context="com.firstbuild.androidapp.cookingMethod.CookingMethodActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/include_app_bar" />

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_marginBottom="@dimen/footer_height">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.firstbuild.viewUtil.StyledButton
            android:id="@+id/btn_custom"
            android:layout_width="match_parent"
            android:background="@drawable/btn_custom"
            android:layout_height="@dimen/footer_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Custom"
            android:textAllCaps="false"
            android:textSize="20sp"
            ge:typeface="fonts/PTSansNarrowBold"/>

    </LinearLayout>


</RelativeLayout>
