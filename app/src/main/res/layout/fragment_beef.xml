<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.firstbuild.androidapp.sousvideUI.BeefFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="BEEF (STEAK) SETTINGS"
            android:textColor="@color/colorSecondaryText"
            android:textSize="19sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="1H : 47MIN   |   140.5Â° F"
            android:textColor="@color/colorSecondaryText"
            android:textSize="19sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container_thickness"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/img_thickness_grid">

        <ImageView
            android:id="@+id/thickness_knob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_thickness_knob" />

        <RelativeLayout
            android:id="@+id/img_meat"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_meat">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="Medium-Rare 140 F"
                android:textColor="@color/colorPrimaryText"
                android:textSize="19sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_cook_guage"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:width="30dp"
                android:gravity="center_horizontal"
                android:text="W"
                android:textColor="@color/colorPrimaryText"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="R"
                android:textColor="@color/colorPrimaryText"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="MR"
                android:textColor="@color/colorPrimaryText"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="M"
                android:textColor="@color/colorPrimaryText"
                android:textSize="19sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="MW"
                android:textColor="@color/colorPrimaryText"
                android:textSize="19sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/cook_knob"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitStart"
            android:src="@drawable/img_doneness_knob" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <com.firstbuild.viewUtil.StyledButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:background="@drawable/btn_bottom_blue"
            android:layout_height="@dimen/footer_button_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Continue"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
