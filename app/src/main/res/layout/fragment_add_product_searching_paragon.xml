<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorParagonAccent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgSpinner"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_spinner_orange"/>

    <com.firstbuild.viewUtil.StyledTextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:text="Searching for your Paragon\nThis might take a few minutes."
        android:textAlignment="center"
        android:textSize="19sp"
        ge:typeface="fonts/PTSansNarrowRegular"/>

</LinearLayout>


