<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imgSpinner"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:src="@drawable/ic_spinner_orange"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp" />

        <ImageView
            android:id="@+id/imgParagonLogo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/img_paragon_log_gray"
            android:layout_below="@+id/imgSpinner"
            android:layout_marginTop="100dp" />

        <com.firstbuild.viewUtil.StyledTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/searching_your_paragon"
            android:textSize="20sp"
            ge:typeface="fonts/PTSansNarrowRegular"
            android:gravity="center"
            android:layout_below="@+id/imgParagonLogo"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

</LinearLayout>


