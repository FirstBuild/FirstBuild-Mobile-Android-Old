<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/img_recipe_blank"/>


        <com.firstbuild.viewUtil.StyledTextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:fontFamily="sans-serif-medium"
            android:text="Hollis's world famous pot roast"
            android:textColor="@color/colorParagonPrimary"
            android:textSize="19sp"/>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorParagonDivider"/>

</RelativeLayout>

