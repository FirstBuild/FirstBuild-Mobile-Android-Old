<FrameLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firstbuild.androidapp.dashboard.DashboardActivity"
    xmlns:ge="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/include_app_bar_1b"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/nav_drawer_header_height">

            <LinearLayout
                android:id="@+id/layoutMyProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.firstbuild.viewUtil.StyledTextView
                    android:id="@+id/textMyProducts"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:text="MY PRODUCTS"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp"
                    ge:typeface="fonts/PTSansNarrowRegular"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#6e6a6b" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/listProduct"
                android:layout_below="@+id/layoutMyProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.getbase.floatingactionbutton.AddFloatingActionButton
                android:id="@+id/btnAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"
                fab:fab_colorNormal="@color/colorParagonAccent"
                fab:fab_colorPressed="@color/colorParagonAccent"
                fab:fab_plusIconColor="@android:color/white" />

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
