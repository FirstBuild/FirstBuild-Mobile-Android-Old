<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <!--<style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="colorPrimary">@color/colorParagonPrimary</item>
        <item name="colorPrimaryDark">@color/colorParagonPrimaryDark</item>
        <item name="colorAccent">@color/colorParagonAccent</item>
        <item name="colorControlHighlight">@color/colorParagonHighlight</item>

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorParagonAccent</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorParagonDisabled</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/colorSecondaryText</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:listDivider">@color/colorPrimaryText</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="drawer_menu_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorParagonPrimaryText</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!--ADD PRODUCT-->
    <style name="add_product_plus_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">23dp</item>
    </style>

    <style name="add_product_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="typeface">fonts/PTSansNarrowRegular</item>
    </style>

    <style name="main_ui_item_text" parent="add_product_item_text">
        <item name="android:textColor">@color/colorDarkYellow</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="schedule_time_slot_item">
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">@dimen/grid_layout_default_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_schedule_time_slot_item_bg</item>
        <item name="android:textColor">@color/selector_schedule_weekdays_text_color</item>
        <item name="android:onClick">onTimeSlotClicked</item>
    </style>

    <style name="schedule_header_weekday_item">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_schedule_weekday_bg</item>
        <item name="android:textColor">@color/selector_schedule_weekdays_text_color</item>
        <item name="android:onClick">onWeekdaysClicked</item>
    </style>

