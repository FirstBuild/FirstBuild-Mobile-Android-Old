<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <!--<style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="colorPrimary">@color/colorParagonPrimary</item>
        <item name="colorPrimaryDark">@color/colorParagonPrimaryDark</item>
        <item name="colorAccent">@color/colorParagonAccent</item>
        <item name="colorControlHighlight">@color/colorParagonHighlight</item>
    </style>

    <style name="drawer_menu_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/colorParagonPrimaryText</item>
        <item name="android:textSize">19sp</item>
    </style>

    <!--ADD PRODUCT-->
    <style name="add_product_plus_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">23dp</item>
    </style>

    <style name="add_product_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">23dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="typeface">fonts/PTSansNarrowRegular</item>
    </style>

</resources>
